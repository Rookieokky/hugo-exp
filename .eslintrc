{
  "extends": [
    "airbnb",
    "plugin:ava/recommended"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "ava"
  ],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "jsx": true,
    "es6": true,
    "classes": true,
    "experimentalObjectRestSpread": true
  },
  "rules": {
    "comma-dangle": [
      1,
      "always-multiline"
    ],
    "no-return-assign": 0,
    "no-underscore-dangle": 0,
    "max-len": [
      1,
      180,
      4
    ],
    "arrow-body-style": [
      0
    ],
    "react/forbid-prop-types": [
      0
    ],
    "react/jsx-filename-extension": [
      0
    ],
    "react/jsx-no-bind": [
      0
    ],
    "import/no-unresolved": [
      0
    ] // Until import plugin supports webpack 2 resolveModules
  }
}